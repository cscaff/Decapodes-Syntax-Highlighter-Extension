{
    "comment": "This is a Julia language file that embeds a Decapode language into the decapode string macro",
    "fileTypes": [],
    "injectionSelector": "L:string.quoted.macro.julia",
    "patterns": [
        {
            "include": "#decapode_block"
        }
    ],
    "repository": {
        "decapode_block": {
                    "name": "block.julia.podeBlock",
                    "begin": "(decapode)(\")",
                    "end": "(^|\\G)(\\s*)(\")\\s*$",
                    "beginCaptures": {
                        "0": {
                            "name": "support.function.macro.emphasis.julia.podeBlock"
                        }
                    },
                    "endCaptures": {
                        "3": {
                            "name": "support.function.macro.emphasis.julia.podeBlock"
                        }
                    },
                    "patterns": [
                        {
                            "begin": "(^|\\G)(\\s*)(.*)",
                            "while": "(^|\\G)(?!\\s*(\")\\s*$)",
                            "contentName": "emphasis.meta.embedded.source.pode",
                            "patterns": [
                                {
                                    "include": "source.pode"
                                }
                            ]
                        }
                    ]
                }
    },
    "scopeName": "source.julia.podeBlock"
}